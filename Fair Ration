char* fairRations(int B_count, int* B) {
    int sum = 0;
    for (int i = 0; i < B_count; i++) {
        sum += B[i];
    }
    if (sum % 2 != 0) {
        return "NO";
    }

    int loaves = 0;
    for (int i = 0; i < B_count - 1; i++) {
        if (B[i] % 2 != 0) {
            B[i]++;
            B[i+1]++;
            loaves += 2;
        }
    }

    static char result[20];
    sprintf(result, "%d", loaves);
    return result;
}
